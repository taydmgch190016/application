<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>
    <div class="app">
        {{> adminHeader}}
        <div class="container">
            <div class="grid">
                <div class="row">
                    <nav class="navbar navbar-light bg-light">
                        <div class="container-fluid">
                            <a class="navbar-brand">Staff Management</a>
                            <form class="d-flex input-group w-auto" method="post" action="/admin/adminSearchStaff">
                                <input type="search" name="keyword" class="form-control rounded" placeholder="Search"
                                    aria-label="Search" aria-describedby="search-addon" />
                                <button type="submit" class="input-group-text border-0" id="search-addon">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                        </div>
                    </nav>
                    <div class="e-panel card" style="background-color: #f5f5f5">
                        <div class="card-body">
                            <div class="card-title">
                            </div>
                            <div class="e-table">
                                <div class="table-responsive table-lg mt-3">
                                    <table class="table table-striped table-bordered nowrap" id="content">
                                        <thead style="text-align: center;">
                                            <tr>
                                                <th>Full Name</th>
                                                <th>Avatar</th>
                                                <th>Email</th>
                                                <th>Age</th>
                                                <th>Address</th>
                                                <th>Options</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each listStaff}}
                                            <tr>
                                                <td class="text-nowrap align-middle">{{fullname}}</td>
                                                <td class="text-nowarp align-middle">
                                                    <img src="../{{image}}" alt="" width="100px" height="100px">
                                                </td>
                                                <td class="text-nowrap align-middle">{{email}}</td>
                                                <td class="text-nowrap align-middle">{{age}}</td>
                                                <td class="text-nowrap align-middle">{{address}}</td>
                                                <td class="text-center align-middle">
                                                    <div class="btn-group align-top">
                                                        <a href="/admin/staffEdit?id={{_id}}" class="btn btn-success">
                                                            <span class="glyphicon glyphicon-edit"></span>
                                                            <span><strong>Edit</strong></span>
                                                        </a>
                                                        <a href="/admin/staffDelete?id={{_id}}" class="btn btn-danger"
                                                            onclick="return confirm('Are you sure')">
                                                            <span class="glyphicon glyphicon-remove"></span>
                                                            <span><strong>Delete</strong></span>
                                                        </a>
                                                        <a href="/admin/changePwdStaff?id={{_id}}"
                                                            class="btn btn-warning">
                                                            <span class="glyphicon glyphicon-cog"></span>
                                                            <span><strong>Change Password</strong></span>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div id="paging"></div>
                    </div>
                </div>
            </div>
        </div>
        <script src="/js/jquery-3.6.0.min.js"></script>
        <script src="/js/pagination.js"></script>
        <script src="/js/main.js"></script>
        <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
</body>

</html>