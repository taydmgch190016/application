<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>
    <div class="app">
        {{> trainerHeader}}
        <div class="container">
            <div class="grid">
                <div class="row">
                    <h1 class="text-uppercase text-center mt-3">Class {{detailClass.name}}</h1>           
                </div>
                <div class="e-panel card" style="background-color: #f5f5f5">
                    <div class="card-body">
                        <div class="card-title">
                        </div>
                        <div class="e-table">
                            <div class="table-responsive table-lg mt-3">
                                <table class="table table-bordered">
                                    <thead style="text-align: center;">
                                        <tr>
                                            <th colspan="3">Trainee</th>
                                        </tr>
                                    </thead>
                                    <tbody style="text-align: center;">
                                        <tr>
                                            <th>Email</th>
                                            <th>Full Name</th>            
                                        </tr>
                                        {{#each listTraineeInClass}}
                                        <tr>
                                            <td class="text-nowrap align-middle">
                                                {{this.email}}
                                            </td>
                                            <td class="text-nowrap align-middle">
                                                {{this.fullname}}
                                            </td>           
                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
</body>

</html>