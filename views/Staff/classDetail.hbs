<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>
    <div class="app">
        {{> staffHeader}}
        <div class="container">
            <div class="grid">
                <div class="row">
                    <h1 class="text-uppercase text-center mt-3">Class {{detailClass.name}}</h1>

                    <div class="function__mgt">
                        <div class="function__mgt-add">
                            {{!-- Add trainee for class --}}
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary navbar-nav" data-mdb-toggle="modal"
                                data-mdb-target="#exampleModal">
                                Add Trainee
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Add Trainee For Class</h5>
                                            <button type="button" class="btn-close" data-mdb-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">.
                                            <form action="/staff/doAddTraineeforClass?id={{detailClass._id}}"
                                                method="post" class="form">
                                                <div class="form-group">
                                                    <label class="form-label">Email</label>
                                                    <select name="txtTraineeID" class="form-control">
                                                        {{#each listTraineeForAdd }}
                                                        <option value={{_id}}>{{email}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                                <div class="modal-footer">
                                                    <input type="submit" class="btn btn-primary form-submit"
                                                        value="Add">
                                                    <button type="button" class="btn btn-danger"
                                                        data-mdb-dismiss="modal">Close</button>
                                                </div>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            {{!-- END modal --}}

                            {{!-- Add course for class--}}
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary navbar-nav" data-mdb-toggle="modal"
                                data-mdb-target="#exampleModal1">
                                Add Course
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Add Course For Class</h5>
                                            <button type="button" class="btn-close" data-mdb-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">.
                                            <form action="/staff/doAddCourseforClass?id={{detailClass._id}}"
                                                method="post" class="form">
                                                <div class="form-group">
                                                    <label class="form-label">Course Name</label>
                                                    <select name="txtCourseID" class="form-control">
                                                        {{#each listCourseForAdd}}
                                                        <option value={{_id}} >{{name}} - {{this.trainer.fullname}}
                                                        </option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                                <div class="modal-footer">
                                                    <input type="submit" class="btn btn-primary form-submit"
                                                        value="Add">
                                                    <button type="button" class="btn btn-danger"
                                                        data-mdb-dismiss="modal">Close</button>
                                                </div>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            {{!-- END modal --}}

                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton"
                                    data-mdb-toggle="dropdown" aria-expanded="false">
                                    Course
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    {{#each listCourseInClass}}
                                    <li>
                                        <div class="course__item">

                                            <option value={{_id}}>{{name}} - {{this.trainer.fullname}}</option>

                                            <a href="/staff/classDetail/doDeleteCoursefromClass?id={{_id}}"
                                                onclick="return confirm('Are you sure')">
                                                <i class="fas fa-times"></i>
                                            </a>

                                        </div>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                        <div class="function__mgt-search">
                            {{!-- Search --}}
                            <form class="d-flex input-group w-auto">
                                <input type="search" class="form-control rounded" placeholder="Search"
                                    aria-label="Search" aria-describedby="search-addon" />
                                <span class="input-group-text border-0" id="search-addon">
                                    <i class="fas fa-search"></i>
                                </span>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="e-panel card" style="background-color: #f5f5f5">
                    <div class="card-body">
                        <div class="card-title">
                        </div>
                        <div class="e-table">
                            <div class="table-responsive table-lg mt-3">
                            
                                    <table class="table table-bordered">
                                        <thead style="text-align: center;">
                                            <tr>
                                                <th colspan="3">Trainee</th>
                                            </tr>
                                        </thead>
                                
                                        <tbody style="text-align: center;">
                                            <tr>
                                                <th>Email</th>
                                                <th>Full Name</th>
                                                <th>Option</th>
                                            </tr>
                                         
                                            {{#each listTraineeInClass}}
                                            <tr>
                                                <td class="text-nowrap align-middle">
                                                    {{this.email}}
                                                </td>
                                                <td class="text-nowrap align-middle">
                                                    {{this.fullname}}
                                                </td>
                                                <td>                                                            
                                                    
                                                    <div class="btn-group align-top">
                                                        <a href="/staff/classDetail/doDeleteTraineefromClass?id={{_id}}"
                                                            class="btn btn-danger"
                                                            onclick="return confirm('Are you sure')">
                                                            <span class="glyphicon glyphicon-remove"></span>
                                                            <i class="fas fa-trash-alt"></i> 
                                                                
                                                        </a>
                                                                
                                                    </div>
                                                        {{!-- <input type="submit" value ="Delete" class= "btn btn-danger"> --}}
                                                        
                                                </td>
                                            </tr>
                                            {{/each}}
                                           
                                        </tbody>
                                       
                                    </table>
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
</body>

</html>