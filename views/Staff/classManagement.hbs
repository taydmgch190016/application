<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>
    <div class="app">
        {{> staffHeader}}
        <div class="container">
            <div class="grid">
                <div class="row">
                    <h1 class="text-uppercase text-center mt-3">Class Management</h1>
                    <div class="function__mgt">
                        <div class="function__mgt-add">
                            <a class="btn btn-primary" href="/staff/classAdd">Add Class</a>
                        </div>
                        <div class="function__mgt-search">
                            <form class="d-flex input-group w-auto">
                                <input type="search" class="form-control rounded" placeholder="Search"
                                    aria-label="Search" aria-describedby="search-addon" />
                                <span class="input-group-text border-0" id="search-addon">
                                    <i class="fas fa-search"></i>
                                </span>
                            </form>
                        </div>
                    </div>
                    <div class="e-panel card" style="background-color: #f5f5f5">
                        <div class="card-body">
                            <div class="card-title">
                            </div>
                            <div class="e-table">
                                <div class="table-responsive table-lg mt-3">
                                    <table class="table table-bordered">
                                        <thead style="text-align: center;">
                                            <tr>
                                                <th>Name</th>
                                                <th>Course</th>
                                                <th>Options</th>
                                            </tr>
                                        </thead>
                                        <tbody style="text-align: center;">
                                            {{#each listClass}}
                                            <tr>
                                                <td class="text-nowrap align-middle">{{this.name}}</td>
                                                <td class="text-nowrap align-middle"> 
                                                      {{#each this.listCourseInClass }}
                                                       {{name}} - {{this.trainer.fullname}}
                                                       <br>
                                                        {{/each}}
                                                </td>
                                                <td class="text-center align-middle">
                                                    <div class="btn-group align-top">
                                                        <a href="/staff/classDetail?id={{_id}}" class="btn btn-success">
                                                             <span class="glyphicon glyphicon-edit"></span>
                                                           <i class="fas fa-info-circle"></i>
                                                        </a>
                                                        <a href="/staff/classDelete?id={{_id}}" class="btn btn-danger"
                                                            onclick="return confirm('Are you sure')">
                                                            <span class="glyphicon glyphicon-remove"></span>
                                                            <i class="fas fa-trash-alt"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
</body>

</html>