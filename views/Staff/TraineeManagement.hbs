<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>
    <div class="app">
        {{> staffHeader}}
        <div class="container">
            <div class="grid">
                <div class="row">
                    <nav class="navbar navbar-light bg-light">
                        <div class="container-fluid">
                            <a class="navbar-brand">Trainee Management</a>

                            <form class="d-flex input-group w-auto" action="/staff/staffSearchTrainee" method="post">
                                <input type="search" name="keyword" class="form-control rounded"
                                    placeholder="Search FullName" aria-label="Search" aria-describedby="search-addon" />
                                <button class="input-group-text border-0" type="submit" id="search-addon">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                        </div>
                    </nav>
                    <div class="e-panel card" style="background-color: #f5f5f5">
                        <div class="card-body">
                            <div class="card-title">
                            </div>
                            <div class="e-table">
                                <div class="table-responsive table-lg mt-3">
                                    <table class="table table-bordered">
                                        <thead style="text-align: center;">
                                            <tr>
                                                <th>Full Name</th>
                                                <th>Avatar</th>
                                                <th>Email</th>
                                                <th>Age</th>
                                                <th>Address</th>
                                                <th>Education</th>
                                                <th>Options</th>
                                            </tr>
                                        </thead>
                                        <tbody style="text-align: center;">
                                            {{#each listTrainee}}
                                            <tr>
                                                <td class="text-nowrap align-middle">
                                                    <a href="/staff/traineeProfile?id={{_id}}">
                                                        {{fullname}}</a>
                                                </td>
                                                <td class="text-nowrap align-middle">
                                                     <a href="/staff/traineeProfile?id={{_id}}">
                                                      <img src="../{{image}}" alt="" width="100px" height="100px"></a>
                                                   
                                                </td>
                                                <td class="text-nowrap align-middle">{{email}}</td>
                                                <td class="text-nowrap align-middle">{{age}}</td>
                                                <td class="text-nowrap align-middle">{{address}}</td>
                                                <td class="text-nowrap align-middle">{{education}}</td>
                                                <td class="text-center align-middle">
                                                    <div class="btn-group align-top">
                                                      
                                                        <a href="/staff/traineeDelete?id={{_id}}" class="btn btn-danger"
                                                            onclick="return confirm('Are you sure')">
                                                            <span class="glyphicon glyphicon-remove"></span>
                                                            <i class="fas fa-trash-alt"></i> 
                                                        </a>                                            
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
</body>

</html>