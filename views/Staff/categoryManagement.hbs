<!DOCTYPE html>
<html lang="en">

{{> head}}


<body>
    <div class="app">
        {{> staffHeader}}
        <div class="container">
            <div class="grid">
                <div class="row">
                    <h1 class="text-uppercase text-center mt-3">Category Management</h1>
                    <div class="function__mgt">
                        <div class="function__mgt-add">

                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-mdb-toggle="modal"
                                data-mdb-target="#exampleModal">
                                Add Category
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title text-uppercase" id="exampleModalLabel">Add Category
                                            </h5>
                                            <button type="button" class="btn-close" data-mdb-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <form action="/staff/doAddCategory" method="post" class="form">
                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <label class="form-label">Name</label>
                                                    <input name="txtName" type="text" placeholder="Ex: WEB"
                                                        class="form-control">
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <input type="submit" class="btn btn-info form-submit" value="Add">
                                                <button type="button" class="btn btn-danger"
                                                    data-mdb-dismiss="modal">Close</button>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                            {{!-- END modal --}}
                        </div>
                        <div class="function__mgt-search">
                            <form class="d-flex input-group w-auto" method="post" action="/staff/staffSearchCategory">
                                <input type="search" name="keyword"class="form-control rounded" placeholder="Search Title"
                                    aria-label="Search" aria-describedby="search-addon" />
                                <button type="submit" class="input-group-text border-0" id="search-addon">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="e-panel card" style="background-color: #f5f5f5">
                        <div class="card-body">
                            <div class="card-title">
                            </div>
                            <div class="e-table">
                                <div class="table-responsive table-lg mt-3">
                                    <table class="table table-bordered">
                                        <thead style="text-align: center;">
                                            <tr>
                                                <th>TITLE</th>
                                                <th>OPTIONS</th>
                                            </tr>
                                        </thead>
                                        <tbody style="text-align: center;">
                                            {{#each listCategory}}
                                            <tr>
                                                <td class="text-nowrap align-middle">{{name}}</td>
                                                <td class="text-center align-middle">
                                                    <div class="btn-group align-top">
                                                        <!-- Button trigger modal -->
                                                        <button type="button" class="btn btn-success navbar-nav"
                                                            data-mdb-toggle="modal"
                                                            data-mdb-target="#exampleModal{{_id}}">
                                                           <i class="fas fa-user-edit"></i>
                                                        </button>
                                                        <!-- Modal -->

                                                        <div class="modal fade" id="exampleModal{{_id}}" tabindex="-1"
                                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="exampleModalLabel">
                                                                            EDIT CATEGORY</h5>
                                                                        <button type="button" class="btn-close"
                                                                            data-mdb-dismiss="modal"
                                                                            aria-label="Close"></button>
                                                                    </div>
                                                                    <div class="modal-body">.
                                                                        <form action="/staff/doEditCategory?id={{this._id}}"
                                                                            method="post" class="form">
                                                                            <input name="id" value="{{this._id}}"
                                                                                type="hidden">
                                                                            <div class="form-group">
                                                                                <label class="form-label">Name
                                                                                </label>
                                                                                <input type="text" name="txtName"
                                                                                    value="{{this.name}}">
                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                <input type="submit"
                                                                                    class="btn btn-primary form-submit"
                                                                                    value="Update">
                                                                                <button type="button"
                                                                                    class="btn btn-danger"
                                                                                    data-mdb-dismiss="modal">Close</button>
                                                                            </div>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        {{!-- END modal --}}
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
</body>

</html>