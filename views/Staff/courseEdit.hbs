<!DOCTYPE html>
<html lang="en">

{{> head}}
<head>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="main">
        <form action="/staff/courseEdit/doEditCourse" method="post" class="form">
            <h3 class="heading">Edit Course</h3>
            <div class="spacer"></div>
            <input name="id" value="{{editCourse._id}}" class="form-control" hidden>
            
            <div class="form-group">
                <label class="form-label">Name</label>
                <input name="txtName" type="text" value="{{editCourse.name}}" class="form-control">
            </div>
             <div class="form-group">
                <label class="form-label">Category</label>
                <select name="txtCategory" class="form-control" >
                    {{#each listCategory }}
                    <option value={{_id}}>{{name}}</option>
                    {{/each}}                 
            
                </select>

                {{!-- <input name="txtCategory" type="text" placeholder="Ex: WEB" class="form-control"> --}}
            </div>
           <div class="form-group">
                <label class="form-label">Teacher</label>
                <select name="txtTrainer" class="form-control">
                    {{#each listTrainer}}
                    <option value={{_id}}>{{fullname}}</option>
                    {{/each}}
                </select>
                {{!-- <input name="txtCategory" type="text" placeholder="Ex: WEB" class="form-control"> --}}
            </div>
            
            <div class="form-group">
                <label class="form-label">Description</label>
                <input name="txtDescription" type="text" value="{{editCourse.description}}" class="form-control">
            </div>
            <input type="submit" class="form-submit bg-success" value="Save">
            <a href="/staff/courseManagement">
                <input  class="form-submit bg-danger" value="Cancel" style="text-align: center;">
            </a>
        </form>
    </div>
</body>

</html>